<UserControl x:Class="CustomLlaunchingApp.Controls.DApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomLlaunchingApp.Controls"
             
             >
    <Grid Width="55" Height="55" Background="#19FFFFFF">
        <Image x:Name="image_app" Source="/Controls/CustomLlaunchingApp.png" StretchDirection="DownOnly" Stretch="Fill"/>
        <Label Visibility="Hidden" FontFamily="Segoe MDL2 Assets" Content="&#xE756;" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>
        <Label Visibility="Hidden" x:Name="image_icon" FontFamily="Segoe MDL2 Assets" Content="&#xE9D9;" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>
    </Grid>
</UserControl>
